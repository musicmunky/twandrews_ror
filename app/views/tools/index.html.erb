<% content_for :main do %>
<p id="notice" style="display:none;"><%= notice %></p>

<h3>
	Please select a Tool:
	<% if user_signed_in? %>
		<%= link_to 'New Tool', new_tool_path, { class: "btn btn-default btn-xs", style: "float:right;margin-top:2px;padding-left:10px;padding-right:10px;" } %>
	<% end %>
</h3>

<table class="table">
	<thead>
		<tr>
			<th style="width:30px;"></th>
			<th style="width:200px;">Name</th>
			<th>Description</th>
			<th style="width:30px;"></th>
		</tr>
	</thead>

	<tbody>
		<% @tools.each do |tool| %>
			<tr>
				<td><a style="color:#204d74;" title="Edit <%= tool.name %>" href="<%= edit_tool_path(tool) %>"><i class="glyphicon glyphicon-edit"></i></a></td>
				<td><%= link_to tool.name, tool.link, target: "_blank" %></td>
				<td><%= tool.description %></td>
				<td>
					<%= link_to tool, method: :delete, data: { confirm: 'Are you sure you want to delete this tool?' }, style: "color:#C9302C;" do %>
						<i class="glyphicon glyphicon-trash"></i>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% end %>