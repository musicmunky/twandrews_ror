<% content_for :main do %>
<p id="notice" style="display:none;"><%= notice %></p>

<h3>
	Please choose a Project:
	<% if user_signed_in? %>
		<%= link_to 'New Project', new_project_path, { class: "btn btn-default btn-xs", style: "float:right;margin-top:2px;padding-left:10px;padding-right:10px;" } %>
	<% end %>
</h3>

<table class="table">
	<thead>
		<tr>
			<th style="width:30px;"></th>
			<th style="width:200px;">Name</th>
			<th style="width:130px;">Status</th>
			<th>Description</th>
			<th style="width:30px;"></th>
		</tr>
	</thead>

	<tbody>
		<% @projects.each do |project| %>
			<tr>
				<td class="vam"><a style="color:#204d74;" title="Edit <%= project.name %>" href="<%= edit_project_path(project) %>"><i class="glyphicon glyphicon-edit"></i></a></td>
				<td class="vam"><%= link_to project.name, project.link, target: "_blank" %></td>
				<td class="vam"><%= project.get_status %></td>
				<td class="vam"><%= project.description %></td>
				<td class="vam">
					<%= link_to project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' }, style: "color:#C9302C;" do %>
						<i class="glyphicon glyphicon-trash"></i>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% end %>
